{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program with Watch",
        "skipFiles": [
          "<node_internals>/**"
        ],
        "program": "${workspaceFolder}/server/index.js",
        "outFiles": [
          "${workspaceFolder}/**/*.js"
        ],
        "preLaunchTask": "npm: watch",
        "cwd": "${workspaceFolder}"
      }
    ]
  }